<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/category_item_type_height"
    android:gravity="center_vertical">

    <View
        android:id="@+id/category_item_type"
        android:layout_marginLeft="@dimen/welcom_logo_bottom_margin"
        android:layout_width="2dp"
        android:layout_height="@dimen/category_item_type_height"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/category_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/welcom_logo_bottom_margin"
        android:textSize="@dimen/category_item_text_size"
        android:text="@string/app_name"/>

</LinearLayout>